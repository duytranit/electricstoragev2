<% @projects.each do |p| %>
  <div class="post">
    <h2 class="title">
      <%= link_to p.title, p %>
    </h2>
    <h3 class="posted"><%= p.created_at %></h3>
    <div class="story">
      <table>
        <tr>
          <td>
            <p style="text-align: center">
              <%=  link_to image_tag(p.photo.url(:panel)), p %>
            </p>
          </td>
          <td>
            <table>
              <tr>
                <td>
                  <p>
                    <%= truncate(strip_tags(p.description), length: 160) %>
                  </p>
                </td>
              </tr>
              <tr>
                <td style="text-align: right">
                  <%= link_to "read more ...", p %>
                </td>
              </tr>
            </table>                  
          </td>
        </tr>
      </table>
    </div>
    <div class="meta">
      <p>Category: <%= link_to p.procategory.name, p.procategory %> | <a href="#" class="comment">1 Comment &raquo;</a></p>
    </div>
  </div>
<% end %>

<%= paginate @projects %>

  

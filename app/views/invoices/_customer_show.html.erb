<div style="text-align: center"><h2><%= t("invoice.invoice_show_label") %></h2>
	<%= t("invoice.created_at") + ":" %>
	<%= @invoice.created_at.strftime("%d/%m/%Y") %>
</div>

<br />
<div>
	<%= t("invoice.provider") + ": Sở Khoa Học và Công Nghệ Bến Tre" %><br />
	<%= t("invoice.provider_address") + ": Số 280 đường 3/2- Phường 3 - Tp Bến Tre." %><br />
	<%= t("invoice.provider_phone") + ": 075.3827358" %>
</div>

<br />
<div>
	<%= t("invoice.buyer") + ": " + @invoice.user.first_name + " " + @invoice.user.last_name %>
</div>
<br />
<br />
<br />

<table style="width: 100%">
	<thead>
    <tr>
    	<th style="border: 1px solid black; text-align: center"><%= t("invoice.stt") %></th>
      <th style="border: 1px solid black; text-align: center"><%= t("invoice.project") %></th>
      <th style="border: 1px solid black; text-align: center"><%= t("invoice.price") %></th>
    </tr>
  </thead>
  <tbody>
  	<% flag = 0 %>
  	<% @invoice.projects.each do |project| %>
  		<tr>
  			<td style="border: 1px solid black; ; text-align: center">
  				<%= flag += 1 %>
  			</td>
  			<td style="border: 1px solid black;">
  				<%= link_to truncate(project.title, length: 60), project %>
  			</td>
  			<td style="border: 1px solid black; text-align: center">
  				<%= project.price %>
  			</td>
  		</tr>
  	<% end %>
  </tbody>
</table>

<br />
<div class="field">
  <%= t("invoice.from_date") + ":" %>
  <%= @invoice.from_date %>
</div>
<br />
<div class="field">
  <%= t("invoice.end_date") + ":" %>
  <%= @invoice.end_date %>
</div>
<br />
<div class="field">
  <%= t("invoice.download_time") + ":" %>

	<% download_time = @invoice.download_time %>

	<% case download_time %>
		<% when 1..19 %>
			<%= image_tag '../assets/battery0.png', style: 'width: 25px; height:50px;' %> / 
			<%= label_tag download_time.to_s + " times" %>
		<% when 20..39 %>
			<%= image_tag '../assets/battery20.png', style: 'width: 25px; height:50px;' %> / 
			<%= label_tag download_time.to_s + " times" %>
		<% when 40..59 %>
			<%= image_tag '../assets/battery40.png', style: 'width: 25px; height:50px;' %> / 
			<%= label_tag download_time.to_s + " times" %>
		<% when 50..79 %>
			<%= image_tag '../assets/battery60.png', style: 'width: 25px; height:50px;' %> / 
			<%= label_tag download_time.to_s + " times" %>
		<% when 80..99 %>
			<%= image_tag '../assets/battery80.png', style: 'width: 25px; height:50px;' %> / 
			<%= label_tag download_time.to_s + " times" %>
		<% when 100 %>
			<%= image_tag '../assets/battery100.png', style: 'width: 25px; height:50px;' %> / 
			<%= label_tag download_time.to_s + " times" %>
	<% end %>     
</div> 
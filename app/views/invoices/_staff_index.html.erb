<h1>Listing invoices</h1>

<table>
  <thead>
    <tr>
      <th style="text-align: left">From Date</th>
      <th style="text-align: left">End Date</th>
      <th>Amount of Projects</th>
      <th>Download time</th>
      <th>Contract</th>
    </tr>
  </thead>

  <tbody>    
    <% @invoices.each do |invoice| %>
      <tr>
        <td>
          <% from_date = invoice.from_date %>
          <%= from_date.strftime("%d/%m/%Y") %>
        </td>
        <td>
          <%= invoice.end_date.strftime("%d/%m/%Y") %>
        </td>
        <td style="text-align: center">
          <%= invoice.invoicedetails.count %>
        </td>
        <td style="text-align: center">
          <%= invoice.download_time %>
        </td>
        <td style="text-align: center">
          <% if invoice.status %>
            <%= image_tag("../assets/signed.png") %>
          <% else %>
            <%= image_tag("../assets/unsigned.png") %>
          <% end %>
        </td>
        <td style="text-align: center">
          <%= link_to image_tag("../assets/show.png"), invoice %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
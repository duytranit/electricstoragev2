<p id="notice"><%= notice %></p>

<div class="post">
	<h2 class="title">
		<%= label_tag @project.title %>
	</h2>
	<h3 class="posted"><%= @project.created_at %></h3>
	<div class="story">
		<p>
			<%= raw(@project.description) %>
		</p>
	</div>

	<%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>

  <% if @attachments.count > 0 %>
    <h1>Listing attachments</h1>
    <table>
      <thead>
        <tr>
          <th>Attached File</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @attachments.each do |attachment| %>
          <tr>
            <td><%= attachment.file_file_name %></td>
            <td><%= link_to 'Destroy', attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %> 

  <br/>
  <br/>

  <%= link_to 'New Attachment', new_attachment_path(@project) %>

	<div>
		<h3>feedbacks</h3>

		<ul>
	    <% @feedbacks.each do |feedback| %>
	      <li>
	      	<%= feedback.user.first_name + " " + feedback.user.last_name + ": " %>
	      	<%= link_to feedback.content, feedback %>
	      </li>
	    <% end %>
	    <br />
	    <%= paginate @feedbacks %>
  	</ul>

	</div>

</div>
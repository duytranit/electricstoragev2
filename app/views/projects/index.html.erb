<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th style="width: 150px; text-align: left; ">Title</th>
      <th style="width: 50px; text-align: left; ">Price</th>      
      <th style="width: 70px; text-align: left; ">Category</th>
      <th style="width: 40px;">Share</th>
      <th style="width: 40px;">Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>    
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project.title, project, title: "Click to show " + project.title, rel: "tootip" %>
        </td>
        <td><%= project.price %></td>        
        <td><%= project.procategory.name %></td>
        <td style="text-align: center">
          <% if project.share %>
            <%= image_tag("../assets/unlock.png") %>
          <% else %>
            <%= image_tag("../assets/lock.png") %>
          <% end %>
        </td>
        <td style="text-align: center">
          <% if project.status %>
            <%= image_tag("../assets/yes.png") %>
          <% else %>
            <%= image_tag("../assets/no.png") %>
          <% end %>
        </td>
        <td>
          <%= link_to image_tag("../assets/edit.png"), edit_project_path(project), title: "Click to edit " + project.title, rel: "tootip" %>
          <%= link_to image_tag("../assets/delete.png"), project, method: :delete, data: { confirm: 'Are you suren to destroy ' + project.title + ' ?' }, title: "Destroy " + project.title %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @projects %>

<br>

<%= link_to image_tag("../assets/new_project.png"), new_project_path, title: "Add new project", rel: 'tootltip' %>

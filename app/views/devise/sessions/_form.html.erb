<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table style="width: 100%; text-align: center;">
    <tr>
      <td>
        <%= image_tag '../assets/login.png', style: "margin-right: 20px;" %>
      </td>
      <td>
        <table>
          <tr>
            <td>
              <%= f.email_field :email, autofocus: true, placeholder: t("user.registration.email") %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.password_field :password, autocomplete: "off", placeholder: t("user.registration.password") %>
            </td>
          </tr>
        </table>
      </td>
    </tr>          
  </table>
  <br />
  <%= f.check_box :remember_me %> <%= t(:remember_me) %> <br /><br />
  <%= f.submit t(:sign_in), class: "button", title: t(:sign_in), rel: 'tooltip' %>
<% end %>
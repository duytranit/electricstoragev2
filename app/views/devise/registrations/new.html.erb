<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <table>
    <tr>
      <td>
        <%= image_tag "../assets/userAvatar.png" %> <br/>
        <%= f.file_field :avatar, accept: 'image/png, image/gif, image/jpeg, image/jpg' %>
      </td>
      <td>
        <table>
          <tr>
            <td>
              <%= label_tag "Full Name" %>
            </td>
            <td>
              <%= f.text_field :first_name, placeholder: "First Name" %><%= f.text_field :last_name, placeholder: "Last Name" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :email %>
            </td>
            <td>
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :password %>
            </td>
            <td>
              <%= f.password_field :password, autocomplete: "off", placeholder: "*********" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= label_tag "Confirmation" %>
            </td>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "*********" %>
            </td>
          </tr>
          <tr>
            <table style="width: 100%; text-align: center; margin-top: 20px">
              <tr>
                <td>
                  <%= image_tag('../assets/customer.png') %>
                </td>
                <td>
                  <%= image_tag('../assets/staff.png') %>
                </td>
              </tr>
              <tr>
                <% ['customer', 'staff'].each do |role| %>
                  <td style="width: 50%">
                    <%= f.radio_button(:role, role) %>
                    <%= role.humanize %>
                  </td>
                <% end %>
              </tr>
            </table>                
          </tr>
        </table>
      </td>
    </tr>
  </table>
  <%= f.submit "Sign up", type: :image, src: '../assets/sign_up_button.png', title: 'Sign up', rel: 'tooltip' %>
<% end %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <table>
    <tr>
      <td>
        <%= image_tag "../assets/userAvatar.png" %> <br/>
        <%= f.file_field :avatar %>
      </td>
      <td>
        <table>
          <tr>
            <td>
              <%= label_tag "Full Name" %>
            </td>
            <td>
              <%= f.text_field :first_name, placeholder: "First Name" %><%= f.text_field :last_name, placeholder: "Last Name" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :email %>
            </td>
            <td>
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :password %>
            </td>
            <td>
              <%= f.password_field :password, autocomplete: "off", placeholder: "*********" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= label_tag "Confirmation" %>
            </td>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "*********" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :role %>
            </td>
            <td>
              <%= f.select :role, ["customer", "staff"] %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "Sign up" %>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<% end %>
<br />
<%= render "devise/shared/links" %>
